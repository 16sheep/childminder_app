<%= form_for [current_user, @child] do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name %>
  <%=f.label :age %>
  <%=f.number_field :age %>
  <%=f.label "School" %>
  <%= f.collection_select :school_id, School.all, :id, :name %>
  <%=f.submit %>
<% end %>
<%= link_to "Cancel", "/users/#{current_user.id}" %>
