<%=form_for [:user, @availability] do |f| %>
  <%= f.label "From" %>
  <%= f.label :days%>
  <%= datetime_field("availability", "time_from", min: Date.today)%>
  <%= f.label "Until" %>
  <%= datetime_field("availability", "time_until", min: Date.today)%>
  <%= f.label :number_of_children %>
  <%= f.number_field :number_of_children %>
  <%= f.collection_select :school_id, School.all, :id, :name %>
  <%= f.submit %>
<% end %>
<%= link_to "Cancel", "/users/#{session[:user_id]}" %>
