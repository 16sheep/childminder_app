<div class="container text-center">
  <div class="row">
    <div class="col-sm-12">
      <div class="card m-1">
        <div class="card-header">
          New Childminder Session
        </div>
        <div class="card-body text-center>
          <p class="card-text">
          <%=form_for [:user, @availability] do |f| %>
          <div class="form-group">
            <%= f.label "Date:" %>
              <%= date_select("date", "preferred_date", order: [:day, :month, :year], :discard_year => true, :default => Date.today) %>
          </div>
          <div class="form-group">
            <%= f.label "Session Time From:" %>
            <%= f.time_field :time_from %>
          </div>

          <div class="form-group">
          <%= f.label "Session Time To:" %>
          <%= f.time_field :time_until %>
          </div>

          <div class="form-group">
            <%= f.label "Max Slots Available:" %>
            <%= f.number_field :number_of_children %>
          </div>

          <div class="form-group">
            <%= f.label "Max Slots Available:" %>
            <%= f.collection_select :school_id, School.all, :id, :name %>
          </div>
          </p>
          <span>
          <%= f.submit class:"btn btn-primary"  %>
        </span>
        </div>
      <% end %>
      <p class="card-text">
      </p>
    </div>
  </div>
</div>
</div>
