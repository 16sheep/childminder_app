
<div class="text-center col-xs-1">
<%= form_tag '/', method: :post, class: "form-signin" do %>
    <h1 class="h3 mb-3 font-weight-normal">Login</h1>
    <%= email_field_tag "email", class: "form-control" %> <br>
    <%= password_field_tag "password", class: "form-control" %><br>
    <br>
    <%= submit_tag "submit", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div>
