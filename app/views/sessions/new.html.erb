<div class="container text-center mx-auto mt-4" style="width: 400px;">
    <%= form_tag '/', method: :post, class: "form-signin form-control" do %>
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        <%= label_tag "email" %> <br>
        <%= email_field_tag "email", "", class:'form-control' %> <br>
        <%= label_tag "password" %> <br>
        <%= password_field_tag "password", "", class:'form-control' %><br>
        <%= submit_tag "submit", class:"btn btn-lg btn-dark btn-block"%>
    <% end %>
</div>
